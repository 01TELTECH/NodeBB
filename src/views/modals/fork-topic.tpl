<div class="panel panel-primary tool-modal">
	<div class="panel-heading">
		<h3 class="panel-title">[[topic:fork-topic]]</h3>
	</div>
	<div class="panel-body">
		<div class="form-group">
			<label for="title">[[topic:title]]</label>
			<input id="fork-title" type="text" class="form-control">
		</div>
		<p>
			[[topic:tools.fork-topic-instruction]]<br />
			<strong><span id="fork-pids"></span></strong>
		</p>
	</div>
	<div class="panel-footer">
		&nbsp;
		<div class="btn-group pull-right">
			<button class="btn btn-link btn-xs" id="fork-topic-cancel">[[global:buttons.close]]</button>
			<button class="btn btn-primary btn-xs" id="fork-topic-commit" disabled>[[topic:fork-topic]]</button>
		</div>
	</div>
</div>